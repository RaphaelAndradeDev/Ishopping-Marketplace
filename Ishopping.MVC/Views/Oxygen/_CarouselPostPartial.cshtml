@model Ishopping.Mvc.Serialization.Component.ComponentPostSerialization

@{
    var i = ViewData["index"]; var j = 0; var ms = "ms"; var inner = "active";
}
    
<div class="col-sm-4 wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="@i@ms">
    <div class="post-thumb">
        <div id="post-carousel_@i" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @foreach (var c in Model.UserImageGallery)
                {
                    <li data-target="#post-carousel_@i" data-slide-to="@j" class="@inner"></li>
                    j++; inner = "";
                }
            </ol>
            @{inner = "item active";}
            <div class="carousel-inner">
                @foreach (var img in Model.UserImageGallery)
                {
                    <div class="@inner">
                        <a href="@Url.Action("SinglePost", "AppView", new { id = Model.IdStr })">
                            <img class="img-responsive" src="~/Content/uploads/@img.Folder/@img.FileName" alt="">
                        </a>
                    </div>
                    inner = "item";
                }
            </div>
            <a class="blog-left-control" href="#post-carousel_@i" role="button" data-slide="prev"><i class="fa fa-angle-left"></i></a>
            <a class="blog-right-control" href="#post-carousel_@i" role="button" data-slide="next"><i class="fa fa-angle-right"></i></a>
        </div>
    </div>
    <div class="entry-header">
        <h3><a class="@Model.ComponentPostOption.Titulo" href="@Url.Action("SinglePost", "AppView", new { id = Model.IdStr })">@Html.Raw(Model.Titulo)</a></h3>
        <span class="date">@Model.DataCadastro</span>
        <span class="cetagory">em <strong class="@Model.ComponentPostOption.Categoria">@Html.Raw(Model.Categoria)</strong></span>
    </div>
    <div class="entry-content">
        <p class="@Model.ComponentPostOption.Paragrafo">@Html.Raw(Model.Paragrafo1)</p>
    </div>
</div>



               

