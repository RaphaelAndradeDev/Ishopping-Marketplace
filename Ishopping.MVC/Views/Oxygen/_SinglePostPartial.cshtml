@model Ishopping.Mvc.Serialization.Component.ComponentPostSerialization

<div class="col-sm-4 wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="400ms">
    <div class="post-thumb">
        <a href="@Url.Action("SinglePost", "AppView", new { id = Model.IdStr })"><img class="img-responsive" src="~/Content/uploads/@Model.UserImageGallery.ElementAt(0).Folder/@Model.UserImageGallery.ElementAt(0).FileName" alt=""></a>         
    </div>
    <div class="entry-header">
        <h3><a class="@Model.ComponentPostOption.Titulo" href="@Url.Action("SinglePost", "AppView", new { id = Model.IdStr })">@Html.Raw(Model.Titulo)</a></h3>
        <span class="date">@Model.DataCadastro</span>
        <span class="cetagory">em <strong class="@Model.ComponentPostOption.Categoria">@Html.Raw(Model.Categoria)</strong></span>
    </div>
    <div class="entry-content">
        <p class="@Model.ComponentPostOption.Paragrafo">@Html.Raw(Model.Paragrafo1)</p>
    </div>
</div>



