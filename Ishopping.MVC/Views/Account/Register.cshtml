@model Ishopping.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar uma nova conta";
}

<br />
<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-sm-8 col-md-7">
        <section id="createNewAccount">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Preencha os dados.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-4 col-md-4 col-lg-3 control-label" })
                    <div class="col-sm-8 col-md-8 inputm">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-sm-4 col-md-4 col-lg-3 control-label" })
                    <div class="col-sm-8 col-md-8 inputm">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-4 col-md-4 col-lg-3 control-label" })
                    <div class="col-sm-8 col-md-8 inputm">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-md-offset-4 col-lg-offset-3 col-md-8">
                        <input type="submit" class="btn btn-default" value="Registrar" />
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-sm-11 col-md-4">
        <section id="email">
            <h4>Utilize um e-mail válido.</h4>
            <hr />
            <p>
                É preciso ter uma conta de e-mail válida. Se você ainda não possui uma conta de e-mail você pode criar usando o
                <a href="https://accounts.google.com/b/0/SignUp?service=mail" target="_blank">Gmail da Google</a>, o
                <a href="https://www.microsoft.com/pt-br/outlook-com/" target="_blank">OutLook da Microsoft </a>ou qualquer outro provedor de e-mail de sua preferência.
            </p>
        </section>
    </div>


</div>

    

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
