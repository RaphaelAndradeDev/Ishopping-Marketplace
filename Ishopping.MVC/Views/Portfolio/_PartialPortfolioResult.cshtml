@model Ishopping.Application.ViewModel.Ishopping.AppPortfolioViewModel

@foreach (var item in Model.Portfolio)
{
    <div class="masonry-grid-item col-sm-6 col-lg-4 g-mb-30">
        <!-- Blog Grid Modern Blocks -->
        <article class="u-shadow-v21 u-shadow-v21--hover g-transition-0_3">
            <img class="img-fluid w-100 g-rounded-top-5" src="~/Content/uploads/@item.UserImageGallery.Folder/@item.UserImageGallery.FileName" alt="Image Description">
            <div class="g-bg-white g-pa-30 g-rounded-bottom-5">
                <ul class="list-inline g-color-gray-dark-v4 g-font-weight-600 g-font-size-12">
                    <li class="list-inline-item mr-0"><a class="u-link-v5 g-color-main" href="@Url.Action("ByCategory", "Portfolio", new { category = item.Category })">@item.Category</a></li>
                    <li class="list-inline-item mx-2">&#183;</li>
                    <li class="list-inline-item"><a class="u-link-v5 g-color-main" href="@Url.Action("main", "Portfolio", new { n = item.SiteNumber })">Visitar Página</a></li>
                </ul>
                <h2 class="h5 g-color-black g-font-weight-600 mb-4">
                    <a class="u-link-v5 g-color-black g-color-primary--hover g-cursor-pointer" href="@Url.Action("item", "Portfolio", new { n = item.SiteNumber, id = item.Id })">@item.Title</a>
                </h2>
                <ul class="list-inline g-font-size-12 mb-0">
                    @foreach (var tags in item._Tags.Take(6))
                    {
                        <li class="list-inline-item g-mb-10">
                            <a class="u-tags-v1 g-color-teal g-bg-teal-opacity-0_1 g-bg-teal--hover g-color-white--hover g-rounded-50 g-py-4 g-px-15" href="@Url.Action("ByTag", "Portfolio", new { tag = tags })">@tags</a>
                        </li>
                    }
                </ul>
            </div>
        </article>
        <!-- End Blog Grid Modern Blocks -->
    </div>
}


