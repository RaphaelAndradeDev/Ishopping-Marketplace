@model Ishopping.ViewModels.TemplateBasicPro.IndexSpiritViewModelDeserialize

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <!--[if IE]><meta http-equiv="x-ua-compatible" content="IE=9" /><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Html.Partial("_PartialMetaTags")

    <!-- Favicons
    ================================================== -->  
    <link rel="apple-touch-icon" href="~/Componentes/BasicPro/Spirit/img/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Componentes/BasicPro/Spirit/img/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Componentes/BasicPro/Spirit/img/apple-touch-icon-114x114.png">

    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" href="~/Componentes/BasicPro/Spirit/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css">

    <!-- Slider
    ================================================== -->
    <link href="~/Componentes/BasicPro/Spirit/css/owl.carousel.css" rel="stylesheet" media="screen">
    <link href="~/Componentes/BasicPro/Spirit/css/owl.theme.css" rel="stylesheet" media="screen">

    <!-- Stylesheet
    ================================================== -->
    <link rel="stylesheet" type="text/css" href="~/Content/uploads/@Model.Profile.SiteNumber/style.css">
    <link rel="stylesheet" href="~/Content/uploads/@Model.Profile.SiteNumber/iscss.css">
    <link rel="stylesheet" type="text/css" href="~/Componentes/BasicPro/Spirit/css/responsive.css">

    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,700,300,600,800,400' rel='stylesheet' type='text/css'>
    @if (!string.IsNullOrEmpty(Model.Profile.GoogleFonts))
    {
        <link href='@Model.Profile.GoogleFonts' rel='stylesheet' type='text/css'>
    }

    <script type="text/javascript" src="~/Componentes/BasicPro/Spirit/js/modernizr.custom.js"></script>

</head>
<body>
    <!-- Navigation
    ==========================================-->
    <nav id="tf-menu" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">@Model.Profile.Empresa</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    @foreach (var menu in Model.Menu)
                    {
                        <li><a href="@menu.ViewLink" class="page-scroll">@menu.TextMenu</a></li>
                        foreach (var item in menu.UserMenuViewItem.Where(x => x.OnMenu == true))
                        {
                            <li><a href="@item.Link" class="page-scroll">@item.TextMenu</a></li>
                        }
                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <!-- Home Page
    ==========================================-->
    <div id="tf-home" class="text-center" style="background-image: url(../../Content/uploads/@Model.ImagensForm[0])">
        <div class="overlay">
            <div class="content">
                <h1 class="@Model.Textos[0].StText">@Html.Raw(Model.Textos[0].Text)</h1>
                <p class="lead @Model.Textos[0].StText">@Html.Raw(Model.Textos[1].Text)</p>
                <a href="#tf-about" class="fa fa-angle-down page-scroll"></a>
            </div>
        </div>
    </div>

    <!-- About Us Page
    ==========================================-->
    @if (Model.ItemScope.ItemActive)
    {
        <div id="tf-about">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <img src="~/Content/uploads/@Model.ImagensForm[1]" class="img-responsive">
                    </div>
                    <div class="col-md-6">
                        <div class="about-text">
                            <div class="section-title">
                                <h2 class="@Model.ItemScope.ItemStTitle">@Html.Raw(Model.ItemScope.ItemTitle)</h2>
                                <hr>
                                <div class="clearfix"></div>
                            </div>
                            <p class="intro @Model.ItemScope.ItemStSubTitle">@Html.Raw(Model.ItemScope.ItemSubTitle)</p>
                            <ul class="about-list">
                                @foreach (var item in Model.ItemScope.ListItens)
                                {
                                    <li>
                                        <span class="@item.VectorIcon"></span>
                                        <strong>@item.Title</strong> - <em>@Html.Raw(item.Description)</em>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- Team Page
    ==========================================-->
    @if (Model.ItemTeam.ItemActive)
    {
        <div id="tf-team" class="text-center" style="background-image: url(../../Content/uploads/@Model.ImagensForm[2])">
            <div class="overlay">
                <div class="container">
                    <div class="section-title center">
                        <h2 class="@Model.ItemTeam.ItemStTitle">@Html.Raw(Model.ItemTeam.ItemTitle)</h2>
                        <div class="line">
                            <hr>
                        </div>
                    </div>
                    <div id="team" class="owl-carousel owl-theme row">
                        @foreach (var item in Model.ItemTeam.ListItens)
                        {
                            <div class="item">
                                <div class="thumbnail">
                                    <img src="~/Content/uploads/@item.UserImageGallery.Folder/@item.UserImageGallery.FileName" alt="..." class="img-circle team-img">
                                    <div class="caption">
                                        <h3 class="@item.ComponentTeamOption.Name">@Html.Raw(item.Name)</h3>
                                        <p class="@item.ComponentTeamOption.Functio">@Html.Raw(item.Functio)</p>
                                        <p class="@item.ComponentTeamOption.Description">@Html.Raw(item.Description)</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Services Section
    ==========================================-->
    @if (Model.ItemActivity.ItemActive)
    {
        <div id="tf-services" class="text-center">
            <div class="container">
                <div class="section-title center">
                    <h2 class="@Model.ItemActivity.ItemStTitle">@Html.Raw(Model.ItemActivity.ItemTitle)</h2>
                    <div class="line">
                        <hr>
                    </div>
                    <div class="clearfix"></div>
                    <small class="@Model.ItemActivity.ItemStSubTitle">@Html.Raw(Model.ItemActivity.ItemSubTitle)</small>
                </div>
                <div class="space"></div>
                <div class="row">
                    @foreach (var item in Model.ItemActivity.ListItens)
                    {
                        <div class="col-md-3 col-sm-6 service">
                            <i class="@item.VectorIcon"></i>
                            <h4><strong class="@item.ComponentActivityOption.Title">@Html.Raw(item.Title)</strong></h4>
                            <p class="@item.ComponentActivityOption.Description">@Html.Raw(item.Description)</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Clients Section
    ==========================================-->
    @if (Model.ItemThumbnail.ItemActive)
    {
        <div id="tf-clients" class="text-center" style="background-image: url(../../Content/uploads/@Model.ImagensForm[3])">
            <div class="overlay">
                <div class="container">
                    <div class="section-title center">
                        <h2 class="@Model.ItemActivity.ItemStTitle">@Html.Raw(Model.ItemActivity.ItemTitle)</h2>
                        <div class="line">
                            <hr>
                        </div>
                    </div>
                    <div id="clients" class="owl-carousel owl-theme">
                        @foreach (var item in Model.ItemThumbnail.ListItens)
                        {
                            <div class="item">
                                <img src="~/Content/uploads/@item.UserImageGallery.Folder/@item.UserImageGallery.FileName">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Portfolio Section
    ==========================================-->
    @if (Model.ItemPortofolio.ItemActive)
    {
        <div id="tf-works">
            <div class="container">
                <!-- Container -->
                <div class="section-title text-center center">
                    <h2 class="@Model.ItemPortofolio.ItemStTitle">@Html.Raw(Model.ItemPortofolio.ItemTitle)</h2>
                    <div class="line">
                        <hr>
                    </div>
                    <div class="clearfix"></div>
                    <small class="@Model.ItemPortofolio.ItemStSubTitle">@Html.Raw(Model.ItemPortofolio.ItemSubTitle)</small>
                </div>
                <div class="space"></div>

                <div class="categories">

                    <ul class="cat">
                        <li class="pull-right">
                            <ol class="type">
                                <li><a href="#" data-filter="*" class="active">Todos</a></li>
                                @foreach (var item in Model.ItemPortofolio.ListItens.Select(x => x.Category).Distinct())
                                {
                                    <li><a href="#" data-filter=".@item.Replace(" ","")">@item</a></li>
                                }
                            </ol>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div id="lightbox" class="row">
                    @foreach (var item in Model.ItemPortofolio.ListItens)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-4 @item.Category.Replace(" ", "")">
                            <div class="portfolio-item">
                                <div class="hover-bg">
                                    <a>
                                        <div class="hover-text">
                                            <h4 class="@item.ComponentPortofolioOption.Title">@Html.Raw(item.Title)</h4>
                                            <small class="@item.ComponentPortofolioOption.Description">@Html.Raw(item.Description)</small>
                                            <div class="clearfix"></div>
                                        </div>
                                        <img src="~/Content/uploads/@item.UserImageGallery.Folder/@item.UserImageGallery.FileName" class="img-responsive" alt="...">
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Testimonials Section
    ==========================================-->
    @if (Model.ItemClient.ItemActive)
    {
        <div id="tf-testimonials" class="text-center" style="background-image: url(../../Content/uploads/@Model.ImagensForm[4])">
            <div class="overlay">
                <div class="container">
                    <div class="section-title center">
                        <h2 class="@Model.ItemClient.ItemStTitle">@Model.ItemClient.ItemTitle</h2>
                        <div class="line">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div id="testimonial" class="owl-carousel owl-theme">
                                @foreach (var item in Model.ItemClient.ListItens)
                                {
                                    <div class="item">
                                        <h5 class="@item.ComponentClientOption.Comment">@item.Comment</h5>
                                        <p class="@item.ComponentClientOption.Functio"><strong class="@item.ComponentClientOption.Name">@item.Name, </strong>@item.Functio</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Contact Section
    ==========================================-->
    <div id="tf-contact" class="text-center">
        <div class="container">

            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <div class="section-title center">
                        <h2 class="@Model.Textos[2].StText">@Model.Textos[2].Text</h2>
                        <div class="line">
                            <hr>
                        </div>
                        <div class="clearfix"></div>
                        <small class="@Model.Textos[3].StText">@Model.Textos[3].Text</small>
                    </div>

                    <form id="main-contact-form" name="contact-form" method="post" action="@Url.Action("EmailS","AppServices")">
                        <input type="hidden" name="siteNumber" value="@Model.Profile.SiteNumber" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Name</label>
                                    <input type="text" class="form-control" name="name" id="exampleInputPassword1" placeholder="Seu Nome">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email</label>
                                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" placeholder="Seu Email">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputSubject">Assunto</label>
                            <input type="text" class="form-control" name="subject" id="exampleInputSubject" placeholder="Assunto">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mensagem</label>
                            <textarea class="form-control" name="message" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn tf-btn btn-default">Enviar</button>
                    </form>
                    <br />
                    <br />
                    <div class="section-title center">
                        <p>@Model.Profile.Adress</p>
                        <p>Tel: @Model.Profile.Phone</p>
                        @if (Model.Profile.WhatsApp != "")
                        {
                            <p>WhatsApp: @Model.Profile.WhatsApp</p>
                        }
                        <p>Email: @Model.Profile.Email</p>
                        @if (Model.Profile.Website != "")
                        {
                            <p>Website: @Model.Profile.Website</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <nav id="footer">
        <div class="container">
            <div class="pull-left fnav">
                <p>ALL RIGHTS RESERVED. COPYRIGHT © 2014. Designed by <a href="https://dribbble.com/shots/1817781--FREEBIE-Spirit8-Digital-agency-one-page-template">Robert Berki</a> and Coded by <a href="https://dribbble.com/jennpereira">Jenn Pereira</a></p>
            </div>
            <div class="pull-right fnav">
                <ul class="footer-social">
                    @if (Model.ItemSocialNetwork.ItemActive)
                    {
                        if (Model.ItemSocialNetwork.ListItens.Count() > 0)
                        {
                            foreach (var item in Model.ItemSocialNetwork.ListItens)
                            {
                                <li><a href="@item.Link"><i class="@item.Classe1"></i></a></li>
                            }
                        }
                        else
                        {
                            <li><a class="popup" href="https://www.facebook.com/sharer/sharer.php?u="><i class="fa fa-facebook"></i></a></li>
                            <li><a class="popup" href="http://twitter.com/share?text=Vejam%20esta%20página&url="><i class="fa fa-twitter"></i></a></li>
                            <li><a class="popup" href="https://plus.google.com/share?url="><i class="fa fa-google-plus"></i></a></li>
                            <li><a class="popup" href="http://www.linkedin.com/shareArticle?mini=true&amp;url="><i class="fa fa-linkedin"></i></a></li>
                            <li><a class="popup" href="http://www.tumblr.com/share/link?url="><i class="fa fa-tumblr"></i></a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript" src="~/Componentes/BasicPro/Spirit/js/jquery.1.11.1.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script type="text/javascript" src="~/Componentes/BasicPro/Spirit/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/Componentes/BasicPro/Spirit/js/SmoothScroll.js"></script>
    <script type="text/javascript" src="~/Componentes/BasicPro/Spirit/js/jquery.isotope.js"></script>

    <script src="~/Componentes/BasicPro/Spirit/js/owl.carousel.js"></script>

    <!-- Javascripts
    ================================================== -->
    <script type="text/javascript" src="~/Componentes/BasicPro/Spirit/js/main.js"></script>
    <script src="~/Scripts/Ishopping/SocialNetworks.min.js"></script>

</body>
</html>
