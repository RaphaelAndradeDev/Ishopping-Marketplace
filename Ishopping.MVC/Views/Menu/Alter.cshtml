@model Ishopping.MVC.ViewModels.Component.ComponentMenuViewModel

@{
    ViewBag.Title = "Componentes Menu";
    Layout = "~/Views/Shared/_LayoutComponent.cshtml";
}

@Html.Partial("_StylePartial")

<input type="hidden" name="_goGallery" value="@Url.Action("GetImgCarte", "ImageGallery", null)">

<div class="row">
    <div class="col-md-8">
        <img class="img-responsive img-rounded" src="~/Images/Ishopping/slide3.jpg" />
    </div>
    <div class="col-md-4">
        <h1>Componente Menu</h1>
        <p>Componentes são itens dinâmicos. Você pode adicionar, editar ou remover um componente.  Cada template possui a sua lista de componentes, as propriedades dos componentes variam de acordo com cada template, algumas propriedades podem não aparecer em um template e aparecer em outro e vice-versa.</p>
        <a href="@Url.Action("About","Home")#Component" target="_blank" class="btn btn-primary btn-lg">Saiba Mais!</a>
    </div>
</div>
<br />
<br />
<br />
@using (Html.BeginForm("Alter", "Carte", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group no-gutter">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-success" id="btnPesq" name="btnPesq">Pesquisar</button>
                </span>
                <input type="text" class="form-control pesq" id="txtTexto" name="txtTexto" placeholder="Título">
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
}
<br />
<div class="well">
    <br />
    <div class="row">
        <div class="col-md-3">
            <img class="img-responsive img-rounded" src="~/Content/uploads/@Model.UserImageGallery.Folder/@Model.UserImageGallery.FileName" />
        </div>
        <div class="col-md-5">
            <input type="hidden" name="_id" value="@Model.Id" />
            <h4 class="color1">Título :</h4>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="input-group">
                        <input class="form-control texto" type="text" id="title" name="title" placeholder="Título" value="@Model._Title" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-leaf bntStyle"></span>
                        </span>
                    </div>
                    @Html.Partial("_IsTagsPartial")
                    <small class="text-muted">Estilo: <span id="stitle">@Model.ComponentMenuOption.Title</span></small>
                </div>
            </div>
            <h4 class="color1">Código da Imagem :</h4>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <input class="form-control image" type="text" id="img" name="img" placeholder="Código da imagem" value="@Model.UserImageGallery.FileName" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" id="goToGallery" style="margin:2px">Ir para Galeria</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <h4 class="color1">Categoria :</h4>
    <div class="form-group">
        <input class="form-control texto" type="text" id="category" name="category" placeholder="Categoria" value="@Model.Category" />
    </div>
    <h4 class="color1">Preço :</h4>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8">
            <div class="input-group">
                <input class="form-control texto" type="text" id="price" name="price" placeholder="Preço" value="@Model.Price" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-leaf bntStyle"></span>
                </span>
            </div>
            @Html.Partial("_IsTagsPartial")
            <small class="text-muted">Estilo: <span id="sprice">@Model.ComponentMenuOption.Price</span></small>
        </div>
    </div>
    <h4 class="color1">Descrição :</h4>
    <div class="row">
        <div class="col-md-8">
            <div class="input-group">
                <textarea class="form-control texto" rows="3" id="description" name="description" placeholder="Descrição">@Model._Description</textarea>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-leaf bntStyle"></span>
                </span>
            </div>
            @Html.Partial("_IsTagsPartial")
            <small class="text-muted">Estilo: <span id="sdescription">@Model.ComponentMenuOption.Description</span></small>
        </div>
    </div>
    <br />
    <div class="checkbox color1">
        <label>@Html.CheckBox("isDynamic", @Model.IsDynamic, new { id = "ativo" })<text>Tornar este item dinâmico</text></label>
    </div>
    <h4 class="color1">Dias da Semana :</h4>
    <div class="form-group">
        <input class="form-control texto" type="text" id="dayOfWeek" name="dayOfWeek" placeholder="Todos os dias da semana = 1,2,3,4,5,6,7" value="@Model.DayOfWeek" />
    </div>
    <br />
    <p>
        <div class="form-group">
            <button type="button" class="btn btn-primary" id="reload" style="margin:2px">Novo</button>
            <button type="button" class="btn btn-primary" id="salvar" style="margin:2px">Salvar</button>
            <button type="button" class="btn btn-danger" id="deletar" style="margin:2px">Deletar</button>
        </div>
    </p>
    <text id="Status"></text>
</div>

@section scripts{
    <script src="~/Scripts/Ishopping/Component/CommunComponentT2.min.js"></script>
    <script src="~/Scripts/Ishopping/Component/ComponentMenu.min.js"></script>
}






