@model IEnumerable<Ishopping.MVC.ViewModels.Admin.AdminSocialNetWorkViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.templateId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdminTemplate.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rede)
        </th>      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdminTemplate.Name)
        </td>
