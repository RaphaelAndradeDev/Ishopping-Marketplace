@model IEnumerable<Ishopping.ViewModels.User.UserProfileContactViewModel>

@{
    ViewBag.Title = "ProfilesBlock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Profiles Bloqueados</h2>
<br />
<table class="table">
    <tr>    
        <th style="width:120px">
            @Html.DisplayNameFor(model => model.SiteNumber)
        </th>  
        <th style="width:200px">
            @Html.DisplayNameFor(model => model.SiteName)
        </th>  
        <th style="width:120px">
            @Html.DisplayNameFor(model => model.Telefone)
        </th> 
        <th style="width:120px">
            @Html.DisplayNameFor(model => model.Telefone2)
        </th> 
        <th style="width:300px">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SiteNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SiteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Visitar Página", "AdminViewProfiles", (string)item.Controller, new { id = item.SiteNumber }, new { target = "_blank" }) |
                    @Html.ActionLink("Detalhes", "ProfilesBlockDetails", new { id = item.SiteNumber })
                </td>
            </tr>
        }
    }

</table>
