@model Ishopping.MVC.ViewModels.Component.ComponentPresentationViewModel
@{
    ViewBag.Title = "Componente Aprensentação";
    Layout = "~/Views/Shared/_LayoutComponent.cshtml";
}

@Html.Partial("_StylePartial")

<input type="hidden" name="_goGallery" value="@Url.Action("GetImgPresentation", "ImageGallery", null)">

<div class="row">
    <div class="col-md-8">
        <img class="img-responsive img-rounded" src="~/Images/Ishopping/slide3.jpg" />
    </div>
    <div class="col-md-4">
        <h1>Componente Apresentação</h1>
        <p>Componentes são itens dinâmicos. Você pode adicionar, editar ou remover um componente.  Cada template possui a sua lista de componentes, as propriedades dos componentes variam de acordo com cada template, algumas propriedades podem não aparecer em um template e aparecer em outro e vice-versa.</p>
        <a href="@Url.Action("About","Home")#Component" target="_blank" class="btn btn-primary btn-lg">Saiba Mais!</a>
    </div>
</div>
<br />
<br />
<br />
@using (Html.BeginForm("Alter", "Presentation", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group no-gutter">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-success" name="btnPesq">Pesquisar</button>
                </span>
                <input type="number" class="form-control" id="txtPosition" name="ps" placeholder="Posição" min="1" max="6">
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
        <div class="col-lg-5">
            <div class="input-group no-gutter">
                <input type="text" class="form-control" id="txtTexto" name="txtTexto" placeholder="Título" />
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-success" name="btnTexto">Pesquisar</button>
                </span>
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
}
<br />
<div class="well">
    <form id="defaultForm" method="post">
        <div class="row">
            <div class="col-md-2">
                <br />
                <img class="img-responsive img-rounded" src="~/Content/uploads/@Model.UserImageGallery.Folder/@Model.UserImageGallery.FileName" />
            </div>
            <div class="col-md-6">
                <input type="hidden" name="_id" value="@Model.Id" />
                <h4 class="color1">Título :</h4>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="input-group">
                            <input class="form-control texto" type="text" id="title" name="title" placeholder="Título" value="@Model._Title" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-leaf bntStyle"></span>
                            </span>
                        </div>
                        @Html.Partial("_IsTagsPartial")
                        <small class="text-muted">Estilo: <span id="stitle">@Model.ComponentPresentationOption.Title</span></small>
                    </div>
                </div>
                <h4 class="color1">Código da Imagem :</h4>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <input class="form-control image" type="text" id="img" name="img" placeholder="Código da imagem" value="@Model.UserImageGallery.FileName" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" id="goToGallery" style="margin:2px">Ir para Galeria</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <h4 class="color1">Categoria :</h4>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8">
                <div class="input-group">
                    <input class="form-control texto" type="text" id="category" name="category" placeholder="Categoria" value="@Model.Category" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-leaf bntStyle"></span>
                    </span>
                </div>
                <small class="text-muted">Estilo: <span id="scategory">@Model.ComponentPresentationOption.Category</span></small>
            </div>
        </div>

        <h4 class="color1">Ícone :</h4>
        <div class="form-group">
            <input class="form-control texto" type="text" id="icon" name="icon" placeholder="fa fa-address-book" value="@Model.VectorIcon" />
            <small class="text-muted"><a href="http://fontawesome.io/icons/" target="_blank">Font Awesome Icons</a></small>
        </div>
        <h4 class="color1">Descrição :</h4>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8">
                <div class="input-group">
                    <textarea class="form-control texto" rows="3" id="description" name="description" placeholder="Descrição">@Model._Description</textarea>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-leaf bntStyle"></span>
                    </span>
                </div>
                @Html.Partial("_IsTagsPartial")
                <small class="text-muted">Estilo: <span id="sdescription">@Model.ComponentPresentationOption.Description</span></small>
            </div>
        </div>
        <br />
        <p>
            <div class="form-group">
                <button type="button" class="btn btn-primary" id="reload" style="margin:2px">Novo</button>
                <button type="submit" class="btn btn-primary" id="salvar" style="margin:2px">Salvar</button>
                <button type="button" class="btn btn-danger" id="deletar" style="margin:2px">Deletar</button>
            </div>
        </p>
        <text id="Status"></text>
    </form>
</div>

@section scripts{
    <script src="~/Scripts/Ishopping/Component/CommunComponentT1.min.js"></script>
    <script src="~/Scripts/Ishopping/Component/ComponentPresentation.min.js"></script>
}







