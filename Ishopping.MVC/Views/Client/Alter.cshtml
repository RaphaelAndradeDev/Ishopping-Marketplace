@model Ishopping.MVC.ViewModels.Component.ComponentClientViewModel

@{
    ViewBag.Title = "Componentes Clientes ou Parceiros";
    Layout = "~/Views/Shared/_LayoutComponent.cshtml";
}

@Html.Partial("_StylePartial")

<input type="hidden" name="_goGallery" value="@Url.Action("GetImgClient", "ImageGallery", null)">

<div class="row">
    <div class="col-md-8">
        <img class="img-responsive img-rounded" src="~/Images/Ishopping/slide3.jpg" />
    </div>
    <div class="col-md-4">
        <h1>Componente Clientes</h1>
        <p>Componentes são itens dinâmicos. Você pode adicionar, editar ou remover um componente.  Cada template possui a sua lista de componentes, as propriedades dos componentes variam de acordo com cada template, algumas propriedades podem não aparecer em um template e aparecer em outro e vice-versa.</p>
        <a href="@Url.Action("About","Home")#Component" target="_blank" class="btn btn-primary btn-lg">Saiba Mais!</a>
    </div>
</div>
<br />
<br />
<br />
@using (Html.BeginForm("Alter", "Client", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group no-gutter">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-success" id="btnPesq" name="btnPesq">Pesquisar</button>
                </span>
                <input type="text" class="form-control" id="txtTexto" name="txtTexto" placeholder="Nome do cliente">
            </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
}
<br />
<div class="well">
    <form id="defaultForm" method="post">
        <div class="row">
            <div class="col-md-2">
                <br />
                <img class="img-responsive img-rounded" src="~/Content/uploads/@Model.UserImageGallery.Folder/@Model.UserImageGallery.FileName" />
            </div>
            <div class="col-md-5">
                <input type="hidden" name="_id" value="@Model.Id" />
                <h4 class="color1">Nome :</h4>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="input-group">
                            <input class="form-control texto" type="text" id="name" name="name" placeholder="Nome do cliente" value="@Model._Name" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-leaf bntStyle"></span>
                            </span>
                        </div>
                        @Html.Partial("_IsTagsPartial")
                        <small class="text-muted">Estilo: <span id="sname">@Model.ComponentClientOption.Name</span></small>
                    </div>
                </div>
                <h4 class="color1">Código da Imagem :</h4>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <input class="form-control image" type="text" id="img" name="img" placeholder="Código da imagem" value="@Model.UserImageGallery.FileName" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <button type="button" class="btn btn-primary" id="goToGallery" style="margin:2px">Ir para Galeria</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <h4 class="color1">Especificações :</h4>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8">
                <div class="input-group">
                    <input class="form-control texto" type="text" id="functio" name="functio" placeholder="Especificações do cliente" value="@Model._Functio" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-leaf bntStyle"></span>
                    </span>
                </div>
                @Html.Partial("_IsTagsPartial")
                <small class="text-muted">Estilo: <span id="sfunctio">@Model.ComponentClientOption.Functio</span></small>
            </div>
        </div>
        <h4 class="color1">Serviços Prestados :</h4>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8">
                <div class="input-group">
                    <input class="form-control texto" type="text" id="project" name="project" placeholder="Serviços prestados para o cliente" value="@Model._Projects" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-leaf bntStyle"></span>
                    </span>
                </div>
                @Html.Partial("_IsTagsPartial")
                <small class="text-muted">Estilo: <span id="sproject">@Model.ComponentClientOption.Projects</span></small>
            </div>
        </div>
        <div class="row">
            <h4 class="color1 col-md-8">Comentário :</h4>
            <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8">
                <div class="input-group">
                    <textarea class="form-control texto" rows="3" id="comment" name="comment" placeholder="Comentário">@Model._Comment</textarea>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-leaf bntStyle"></span>
                    </span>
                </div>
                @Html.Partial("_IsTagsPartial")
                <small class="text-muted">Estilo: <span id="scomment">@Model.ComponentClientOption.Comment</span></small>
            </div>
        </div>
        <h4 class="color1">Website :</h4>
        <div class="form-group">
            <input class="form-control texto" type="text" id="site" name="site" placeholder="http://algumsite.com.br" value="@Model.SiteOficial" />
        </div>
        <br />
        <p>
            <div class="form-group">
                <button type="button" class="btn btn-primary" id="reload" style="margin:2px">Novo</button>
                <button type="submit" class="btn btn-primary" id="salvar" style="margin:2px">Salvar</button>
                <button type="button" class="btn btn-danger" id="deletar" style="margin:2px">Deletar</button>
            </div>
        </p>
        <text id="Status"></text>
    </form>
</div>

@section scripts{
    <script src="~/Scripts/Ishopping/Component/CommunComponentT2.min.js"></script>
    <script src="~/Scripts/Ishopping/Component/ComponentClient.min.js"></script>
}






