@model IEnumerable<Ishopping.MVC.ViewModels.Admin.AdminSliderConfigViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.ViewDatasId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SliderType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SliderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SliderClass)
        </th>  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SliderType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SliderName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SliderClass)
        </td> 
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
